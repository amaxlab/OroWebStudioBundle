{% extends 'OroUIBundle:actions:view.html.twig' %}
{% import 'OroDataGridBundle::macros.html.twig' as dataGrid %}

{% oro_title_set({params : {"%host.name%": entity.name|default('N/A') }}) %}

{% block navButtons %}
    {% if is_granted('EDIT', entity) %}
        {{ UI.editButton({
            'path' : path('web_studio_host_update', { id: entity.id }),
            'entity_label': 'amaxlab.oro.webstudio.host.entity_label'|trans
        })  }}
    {% endif %}
    {% if is_granted('DELETE', entity) %}
        {{ UI.deleteButton({
            'dataUrl': path('oro_action_operation_execute', {'operationName': 'DELETE', 'entityId': entity.id, 'entityClass': entityClass}),
            'dataRedirect': path('web_studio_host_index'),
            'aCss': 'no-hash remove-button',
            'id': 'btn-remove-host',
            'dataId': entity.id,
            'entity_label': 'amaxlab.oro.webstudio.host.entity_label'|trans
        }) }}
    {% endif %}
{% endblock navButtons %}

{% block pageHeader %}
    {% set breadcrumbs = {
        'entity':      entity,
        'indexPath':   path('web_studio_host_index'),
        'indexLabel':  'amaxlab.oro.webstudio.host.entity_plural_label'|trans,
        'entityTitle': entity.name|default('N/A'),
    } %}
    {{ parent() }}
{% endblock pageHeader %}

{% block content_data %}
    {% set businessUnitInformationWidget %}
        {{ oro_widget_render({
            'widgetType': 'block',
            'url': path('web_studio_host_widget_info', {id: entity.id})
        }) }}
    {% endset %}

    {% set dataBlocks = [
        {
            'title': 'General Information'|trans,
            'class': 'active',
            'subblocks': [
                {'data' : [businessUnitInformationWidget]}
            ]
        }
    ] %}

    {% set dataBlocks = dataBlocks|merge([{
        'title' : 'amaxlab.oro.webstudio.hostcredential.entity_plural_label'|trans,
        'subblocks': [{
            'title' : null,
            'useSpan': false,
            'data' : [
                dataGrid.renderGrid('web-studio-host-credential-grid', {host_id: entity.id}, { cssClass: 'inner-grid' })
            ]
        }]
    }] ) %}

    {% set id = 'hostView' %}
    {% set data = { 'dataBlocks': dataBlocks } %}
    {{ parent() }}
{% endblock content_data %}
